#include <stdio.h>
#include <locale.h>

int main() {

    setlocale(LC_ALL,"portuguese");

    // Declaração da variável para armazenar a temperatura em Fahrenheit
    double fahrenheit, celsius;

    // Pergunta a temperatura em Fahrenheit
    printf("Digite a temperatura em graus Fahrenheit: ");
    scanf("%lf", &fahrenheit);

    // Converte a temperatura para Celsius
    celsius = (5.0 / 9.0) * (fahrenheit - 32);

    // Exibe o resultado
    printf("A temperatura em graus Celsius é: %.2lf\n", celsius);

    return 0;
}
