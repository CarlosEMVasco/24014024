#include<stdio.h>
#include<stdlib.h>
#include<math.h>

int main ()
{
   double F, C;

   printf("\nDigite a temperatura em Fahrenheit: ");
   scanf("%lf", &F);

   //cálculos
   C = (F-32)*(5.0/9.0);

   printf("\nTemperatura em Celsius = %lf", C);

   return 0;
}

//exibição: Digite a temperatura em Fahrenheit: 024
//          Temperatura em Celsius: -4,44
